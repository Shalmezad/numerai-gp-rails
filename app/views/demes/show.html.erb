
<table class="ui sortable striped celled table">
  <thead>
    <tr>
      <th>Deme ID</th>
      <th>Generation</th>
      <th>Best Gene</th>
      <th>Min</th>
      <th>Max</th>
      <th>Avg</th>
    </tr>
  </thead>
  <tbody>
    <% @generationStats.each do |gs| %>
      <tr>
        <td>
          <%= gs.deme_id %>
        </td>
        <td>
          <%= gs.generation %>
        </td>
        <td>
          <%= (gs.best_gene || "")[0...100] %>
        </td>
        <td>
          <%= '%.4f' % (gs.min.to_f rescue 0) %>
        </td>
        <td>
          <%= '%.4f' % (gs.max.to_f rescue 0) %>
        </td>
        <td>
          <%= '%.4f' % (gs.avg.to_f rescue 0) %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>

<%= link_to "Stop", stop_deme_path(@deme) , :class => "ui button" %>
